  <div class="row" id="main-content">

    <div class="col-3 d-none d-lg-block text-center sidebar">
      <div class="sidebar__left">
        <h3>Thèmes</h3>
        <div class="mt-2 controls w-100" data-filter-group>
          <% @themes.each do |theme| %>
          <div class="check-wrap d-flex pl-4">
            <button type="button" data-mixitup-control class="check"
              data-toggle=".<%= theme.title.parameterize.underscore %>">
              <svg width="18px" height="18px" viewbox="0 0 18 18">
                <path
                  d="M1,9 L1,3.5 C1,2 2,1 3.5,1 L14.5,1 C16,1 17,2 17,3.5 L17,14.5 C17,16 16,17 14.5,17 L3.5,17 C2,17 1,16 1,14.5 L1,9 Z">
                </path>
                <polyline points="1 9 7 14 15 4"></polyline>
              </svg>
            </button>
            <h6 class="ml-4"><%= theme.title.capitalize %></h6>
          </div>
          <% end %>
        </div>
      </div>
    </div>

    <div class="col col-lg-6 align-self-start mix-container d-flex flex-wrap justify-content-between align-items-start">

      <% @events.each do |event| %>

        <div class="event-container mix <%= event.club.name.parameterize.underscore %> <% event.themes.each do |theme| %><%= theme.title.parameterize.underscore %> <% end %>">
    
          <div class="event-header">
            <%= link_to event_path(event.id) do %>
              <div class="event-cover" style="background: url(<%= event.image %>);">
              </div>
            <% end %>
          </div>

          <div class="event-body">
            <div class="event-title">
              <h2><%= link_to event.name, event_path(event.id) %></h2>
            </div>
            <%= link_to club_path(event.club.id) do %>
              <div class="event-author">
                <div class="event-author-logo"><%= image_tag event.club.logo unless event.club.logo.nil? %></div>
                <h3><%= event.club.name %></h3>
              </div>
            <% end %>
            <div class="event-summary d-none d-md-block">
              <p><%= event.short_description %></p>
            </div>
            <div class="event-tags">
              <ul>
                <% event.themes.each do |theme| %>
                  <li><a href="#"><%= theme.title.capitalize %></a></li>
                <% end %>
              </ul>
            </div>
          </div>
          
          <div class="event-footer">
            <ul>
              <li class="event-date"><%= event.date.strftime("%b") %> <span><%= event.date.strftime("%d") %></span></li>
              <li class="price">
                <i class="fas fa-euro-sign icon-euro"></i>
                <span class="numero">
                  <% if event.price.nil? || event.price == 0 %>
                    <span>Gratuit</span>
                  <% else %>
                    <span><%= event.price %></span>
                  <% end %>
                </span>
              </li>
              <li class="participants">
                <i class="fas fa-check icon-user"></i>
                <span class="numero">12</span>
              </li>
            </ul>
          </div>

        </div>

      <% end %>

    </div>

    <div class="col-3 d-none d-lg-block text-center sidebar">
      <div class="sidebar__right">
        <h3>Associations</h3>
        <div class="mt-2 controls w-100" data-filter-group>
          <% @clubs.each do |club| %>
          <div class="check-wrap d-flex pl-4">
            <button type="button" data-mixitup-control class="check"
              data-toggle=".<%=club.name.parameterize.underscore%>">
              <svg width="18px" height="18px" viewbox="0 0 18 18">
                <path
                  d="M1,9 L1,3.5 C1,2 2,1 3.5,1 L14.5,1 C16,1 17,2 17,3.5 L17,14.5 C17,16 16,17 14.5,17 L3.5,17 C2,17 1,16 1,14.5 L1,9 Z">
                </path>
                <polyline points="1 9 7 14 15 4"></polyline>
              </svg>
            </button>
            <h6 class="ml-4"><%=club.name%></h6>
          </div>
          <% end %>
        </div>
      </div>
    </div>

    <div class="col-10 col-md-6 d-lg-none mobile-filters" id="mobile-filters">

      <button class="toggle-filters">
        <i class="far fa-check-square"></i>
      </button>
    
      <div class="sidebar__left">
        <h3>Thèmes</h3>
        <div class="btn-group-vertical mt-2 controls w-100 align-items-center" data-filter-group>
          <% @themes.each do |theme| %>
          <div class="check-wrap d-flex mt-3 pl-4">
            <button type="button" data-mixitup-control class="check"
              data-toggle=".<%= theme.title.parameterize.underscore %>">
              <svg width="18px" height="18px" viewbox="0 0 18 18">
                <path
                  d="M1,9 L1,3.5 C1,2 2,1 3.5,1 L14.5,1 C16,1 17,2 17,3.5 L17,14.5 C17,16 16,17 14.5,17 L3.5,17 C2,17 1,16 1,14.5 L1,9 Z">
                </path>
                <polyline points="1 9 7 14 15 4"></polyline>
              </svg>
            </button>
            <h6 class="ml-4"><%= theme.title.capitalize %></h6>
          </div>
          <% end %>
        </div>
      </div>

      <div class="sidebar__right">
        <h3>Associations</h3>
        <div class="btn-group-vertical mt-2 controls w-100 align-items-center" data-filter-group>
          <% @clubs.each do |club| %>
          <div class="check-wrap d-flex mt-3 pl-4">
            <button type="button" data-mixitup-control class="check"
              data-toggle=".<%=club.name.parameterize.underscore%>">
              <svg width="18px" height="18px" viewbox="0 0 18 18">
                <path
                  d="M1,9 L1,3.5 C1,2 2,1 3.5,1 L14.5,1 C16,1 17,2 17,3.5 L17,14.5 C17,16 16,17 14.5,17 L3.5,17 C2,17 1,16 1,14.5 L1,9 Z">
                </path>
                <polyline points="1 9 7 14 15 4"></polyline>
              </svg>
            </button>
            <h6 class="ml-4"><%=club.name%></h6>
          </div>
          <% end %>
        </div>
      </div>

    </div>

