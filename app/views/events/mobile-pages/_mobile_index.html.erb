<div class="col-10 col-md-6 d-lg-none mobile-filters" id="mobile-filters">
  <button class="toggle-filters"> <i class="far fa-check-square"></i></button>
    
  <div class="sidebar__left">
    <h3>Th√®mes</h3>
    <div class="btn-group-vertical mt-2 controls w-100 align-items-center" data-filter-group>
      <% @themes.each do |theme| %>
        <div class="check-wrap d-flex mt-3 pl-4">
        <button type="button" data-mixitup-control class="check" data-toggle=".<%= theme.title.parameterize.underscore %>">
          <svg width="18px" height="18px" viewbox="0 0 18 18">
            <path d="M1,9 L1,3.5 C1,2 2,1 3.5,1 L14.5,1 C16,1 17,2 17,3.5 L17,14.5 C17,16 16,17 14.5,17 L3.5,17 C2,17 1,16 1,14.5 L1,9 Z">
            </path>
            <polyline points="1 9 7 14 15 4"></polyline>
          </svg>
        </button>
        <h6 class="ml-4"><%= theme.title.capitalize %></h6>
        </div>
      <% end %>
    </div>
  </div>

  <div class="sidebar__right">
    <h3>Associations</h3>
    <div class="btn-group-vertical mt-2 controls w-100 align-items-center" data-filter-group>
      <% @clubs.each do |club| %>
        <div class="check-wrap d-flex mt-3 pl-4">
          <button type="button" data-mixitup-control class="check" data-toggle=".<%=club.name.parameterize.underscore%>">
            <svg width="18px" height="18px" viewbox="0 0 18 18">
              <path d="M1,9 L1,3.5 C1,2 2,1 3.5,1 L14.5,1 C16,1 17,2 17,3.5 L17,14.5 C17,16 16,17 14.5,17 L3.5,17 C2,17 1,16 1,14.5 L1,9 Z">
              </path>
              <polyline points="1 9 7 14 15 4"></polyline>
            </svg>
          </button>
          <h6 class="ml-4"><%=club.name%></h6>
        </div>
      <% end %>
    </div>
  </div>
</div>