  <div class="container mt-5">
    <div class="row">
      <div class="col-6 m-auto">
        <div class="-form ">
          <div class="mt-3 ">
            <%= simple_form_for [@club, @event] do |f| %>
              <h1>Ajouter un nouvel événement</h1>
              <div class="form-group">
                <%= f.label :name, label: "Nom de l'événement:" %>
                <%= f.text_field :name, class: 'form-control' %>
              </div>
               <div class="form-group">
                <%= f.label :short_description, label: "Description courte:" %>
                <%= f.text_field :short_description, class: 'form-control' %>
              </div>
               <div class="form-group">
                <%= f.label :long_description, label: "Description longue:" %>
                <%= f.text_field :long_description, class: 'form-control' %>
              </div>

              <div class="form-group">
                <%= f.input :themes,:collection => @themes, :label_method => :title,:value_method => :id,:label => "Themes" ,:include_blank => true %>
              </div>

              <div class="mt-3">
              
                <%= link_to 'Annuler', root_path, class: 'btn btn-dark ml-2' %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
