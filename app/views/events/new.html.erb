<%- title "Nouvel événement" %>

<div class="container-fluid spacer">
    <div class="row">
        <div class="col">
          <div class="container mt-5">
            <div class="row">
              <div class="col-6 m-auto">
                <div class="-form ">
                  <div class="mt-3 ">
                    <%= simple_form_for [@club, @event] do |f| %>
                      <h2 class="text-center">Ajout d'un événement pour <%= @club.name %></h2>
                      <div class="form-group">
                      <%= f.input :name,
                          label: "Titre", 
                          placeholder: "Soirée isépienne" %>
                      </div>
                      <div class="form-group">
                        <%= f.label :short_description, label: "Description en quelques mots" %>
                        <%= f.text_field :short_description, 
                          placeholder: "On va boire", 
                          class: 'form-control' %>
                      </div>
                      <div class="form-group">
                        <%= f.input :long_description, :as => :text, 
                          label: "Description complète", 
                          placeholder: "Description longue de l'événement, tu peux ajouter des détails mais évite adresse, date, prix etc car il y a un emplacement réservé juste en dessous !",
                          :input_html => {:style => 'height: 200px'} %>
                      </div>
                      <div class="form-group">
                        <%= f.input :banner, as: :file, label: "Image", hint:"Pensez à centrer les informations car l'image risque d'être coupée (Ratio 7:2, min 1050x300)" %>
                      </div>
                      <div class="form-group">
                        <%= f.input :date, label:"Date et heure" %>
                      </div>
                      <div class="form-group">
                        <%= f.input :location, 
                          label: "Adresse (isep par défaut)",
                          :input_html => { :value => '10 rue de Vanves'} %>
                      </div>        
                      <div class="form-group">
                        <%= f.input :price, 
                          input_html: { type: 'number', :value => 0 }, 
                          label: "Prix si payant (gratuit par défaut)" %>
                      </div> 
                      <div class="form-group">
                        AJouter les thèmes en dropdown
                      </div>             
                      <div class="mt-3">
                        <%= f.submit "Valider", class: 'btn btn-primary' %>
                        <%= link_to 'Annuler', root_path, class: 'btn btn-dark ml-2' %>
                      </div>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
    </div>
</div>