<div class="container-fluid spacer">

    <div class="row d-flex flex-column">

        <div class="view view-cascade overlay">
            <img src="<%= @event.image %>" class="card-img-top" alt="...">
            <a href="#!">
            <div class="mask rgba-white-slight"></div>
            </a>
        </div>
        
        <div class="event-container">
            <div class="event-description">
                <div class="text-center">
                    <%= render 'events/shared/form' %>
                </div>
            </div>


            <p>
            <%= link_to 'Supprimer', event_path(@event),
                method: :delete,
                data: { confirm: 'Êtes-vous sûr?'}
            %>
            </p>

            

            <div id="map" class="event-map" style="width: 100%; height: 600px;" data-markers="<%= @marker.to_json %>" data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>

          </div>
        </div>

        

    </div>
</div>
