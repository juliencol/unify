<div class="container-fluid h-100">

  <%= render "users/shared/background" %>

  <div class="row align-content-stretch justify-content-center align-items-center h-100 overflow-hidden">
    <div class="col-12">
      <div class="login-container">
        <h2 class="mt-5 mb-3">Changer son mot de passe</h2>
        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= f.error_notification %>
          <%= f.input :reset_password_token, as: :hidden %>
          <%= f.full_error :reset_password_token %>
          <div class="form-inputs">
            <%= f.input :password,
                        placeholder: "New password",
                        required: true,
                        autofocus: true,
                        hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                        input_html: { autocomplete: "new-password" },
                        label: false %>
            <%= f.input :password_confirmation,
                        placeholder: "Confirm your new password",
                        required: true,
                        input_html: { autocomplete: "new-password" },
                        label: false %>
          </div>
          <div class="form-actions">
            <%= f.button :submit, "Change my password" %>
          </div>
        <% end %>

        <%= render "users/shared/links" %>
      </div>
    </div>
  </div>

</div>

<%= javascript_pack_tag 'users/users' %>
