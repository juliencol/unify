<div class="mb-5">

  <div class="login-container">
    <h2 class="unify-title">Unify</h2>
    <h5 class="mt-5 mb-3 text-center">Mot de passe oubli√© ?</h5>

    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email" },
                      placeholder: "Email" %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Envoyer les instructions" %>
        </div>
    <% end %>

    <div class="text-center mt-3">
      <%= render "devise/shared/links" %>
    </div>
  </div>


  <div class="logo-container">
      <%= image_tag "https://iseplive.fr/img/login/genesis.png", class:"logo-genesis" %>
      <%= image_tag "https://mcetv.fr/wp-content/uploads/2017/10/logo_isep.png", class:"logo-isep" %>
  </div>
</div>
