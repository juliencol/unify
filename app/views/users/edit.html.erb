<%- title "Modifier profil de #{@user.first_name}" %>

<div class="container-fluid spacer">
    <div class="row user-row">
      <div class="col-6 m-auto">
        <div class="-form">
          <h1>Modifier mon profil</h1>
          <div class="mt-3">
            <%= simple_form_for(@user) do |f| %>
              <div class="form-group">
                <%= f.input :email, class: 'form-control', label: "adresse email" %>
              </div>
               <div class="form-group">
                 <%= f.input :bio, class: 'form-control', label: "Bio" %>
              </div>
              <div class="form-group">
                 <%= f.input :profile_picture, as: :file, label: "Photo de profil" %>
              </div>
              <div class="form-group">
                <%= f.input :instagram_url, class: 'form-control', label: "Instagram url" %>
              </div>
              <div class="form-group">
                <%= f.input :snapchat_url, class: 'form-control', label: "Snapchat url" %>
              </div>
              <div class="form-group">
                <%= f.input :twitter_url, class: 'form-control', label: "Twitter url" %>
              </div>
              <div class="form-group">
                <%= f.input :linkedin_url, class: 'form-control', label: "Linkedin url" %>
              </div>
              <div class="mt-3">
                <%= f.submit "Modifier", class: 'btn btn-primary' %>
                <%= link_to 'Annuler', user_path(@user), class: 'btn btn-danger ml-2' %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>