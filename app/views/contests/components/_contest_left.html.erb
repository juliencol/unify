<div class="sticky-left-group">
  <div class="profile-picture d-flex justify-content-center mb-4">
    <% if @contest.club.logo.nil? || @contest.club.logo == "" %>
      <img src="https://res.cloudinary.com/isep/image/upload/v1577132733/unify/download_wqralk.png" class="club-logo big" >
    <% else %>
        <img class="club-logo big" src=<%= @contest.club.logo %> >
    <% end %>
  </div>
  <div class="infos text-center pb-3">
    <img src=<%= @contest.club.logo unless @contest.club.logo.nil? %> alt="" class="club-logo small mr-2">
    <p>Concours proposé par</p>
    <h2><%= @contest.club.name %></h2>
    <ul class="table-style mt-3">
      <li><span>Nombres de lots </span><%= @contest.rewards.size %></li>
      <li><span>Date limite : </span><%= @contest.deadline %></li>
      <li><span>Participants : </span><%= @contest.users.size %></li>
    </ul>
  </div>
  
  <% if @is_done %>
    <h6 class="text-center">Concours terminé</h6>
  <% else %>
    <div class="contest-show countdown-container" data-date="<%= @contest.deadline.to_formatted_s(:long) %>">
      <h6>Temps restant pour participer :</h6>
      <table>
        <tr class="countdown">
          <th>00</th>
          <th>00</th>
          <th>00</th>
          <th>00</th>
        </tr>
        <tr>
          <td>jours</td>
          <td>heures</td>
          <td>min.</td>
          <td>sec.</td>
        </tr>
      </table>
    </div>
  <% end %>
  
  <div class="d-flex flex-wrap align-items-start justify-content-between justify-content-md-start">
        <% if !@contest.instagram_post_url.nil? and @contest.instagram_post_url != "" %>
          <%= link_to @contest.instagram_post_url, target:"_blank", class:"mb-4" do %>
              <div class="button-effect-3 instagram"><i class="fab fa-instagram"></i></div>
          <% end %>
        <% end %>
  </div>
</div> 