<div class="container-fluid spacer">

  <div class="row">

    <%= render "clubs/shared/banner" %>

  </div>
  <div class="row">

    <div class="col-lg-4 col-12 pt-3 pt-lg-0">
      <%= render "clubs/shared/logo" %>
    </div>
    <div class="col-lg-4 col-6 pt-3 order-lg-first d-flex flex-row flex-wrap justify-content-around align-content-md-center">
      <%= render "clubs/shared/links" %>
    </div>
    <div class="col-lg-4 col-6 pt-3 d-flex flex-column align-items-end justify-content-center">
      <%= render "clubs/shared/buttons" %>
    </div>

  </div>
  <div class="row">

    <div class="col club-feed mt-5 d-flex flex-lg-row flex-column justify-content-between align-content-lg-start align-content-center">

      <% if @club.events.nil? || @club.events == [] %>
        <p>Pas d'événements disponibles.</p>
      <% else %>
        <% @club.events.each do |event| %>

          <div class="card card-cascade wider mt-4">

            <!-- Card image -->
            <div class="view view-cascade overlay">
              <img src="<%= event.image %>" class="card-img-top" alt="...">
              <a href="#!">
                <div class="mask rgba-white-slight"></div>
              </a>
            </div>

            <!-- Card content -->
            <div class="card-body card-body-cascade text-center">

              <!-- Title -->
              <h4 class="card-title">
                <strong><%= event.name %></strong>
              </h4>
              <!-- Subtitle -->
              <h5 class="blue-text pb-2">
                <% if event.price.nil? || event.price == 0 %>
                  <strong>Gratuit</strong>
                <% else %>
                  <strong><%= event.price %> €</strong>
                <% end %>
              </h5>
              <!-- Text -->
              <p class="card-text"><%= event.short_description %></p>


            </div>

            <!-- End Events Card -->
          </div>

        <% end %>
      <% end %>

    </div>

  </div>

</div>

<%= javascript_pack_tag 'shared/navbar' %>
