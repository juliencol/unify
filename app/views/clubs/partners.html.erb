<%- title "Partenaires #{@club.name}" %>

<div class="container-fluid spacer">
  <div class="row club-content">
    <%= render "clubs/shared/club_identity" %>
    <div class="col-12 col-lg-9 pt-3">
      <%= render "clubs/shared/club_show_tabs" %>

      <div class="row mt-3">
        <div class="col d-flex flex-wrap justify-content-around justify-content-lg-center">
            <% @bde.companies.each do |company| %>
              <div class="white-wrapper mb-4 mr-lg-4">
                <img src="<%= company.logo %>" width="100" alt=""/>
              </div>
            <% end %>
        </div>
      </div>

    </div>
  </div>
</div>

<%= javascript_pack_tag 'clubs/header' %>
<%= javascript_pack_tag 'shared/navbar' %>