<h1 class="text-center mt-3">Formulaire de création d'association</h1>
<p class="text-center">Ce formulaire sera envoyé au BDE qui traitera votre demande.</p>
<div class="container text-center mt-3">
    <%= simple_form_for(@club) do |f| %>
        <div class="form-group d-flex">
            <%= f.label :name, label: "Nom:" %>
            <%= f.text_field :name, class: 'form-control' %>
        </div>
        <div class="form-group d-flex">
            <%= f.label :name, label: "Description:" %>
            <%= f.text_field :description, class: 'form-control' %>
        </div>
        <div class="mt-3">
            <%= f.submit "Envoyer au BDE", class: 'btn btn-secondary' %>
            <%= link_to 'Annuler', root_path(anchor: "recommandations"), class: 'btn btn-dark ml-2' %>
        </div>
    <% end %>
</div>
