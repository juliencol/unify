<div class="container-fluid spacer">
  <div class="row text-center p-3 mb-3">
    <div class="col">
      <h1 class="text-center mt-3">Associations</h1>
    </div>
  </div>
  <div class="row text-center">
    <div class="col list-group flex-row flex-wrap justify-content-center">
      <% @clubs.each do |club| %>
        <%= link_to club_path(club), :title => club.name do %>
          <div class="button-effect-3 button-effect-3-big <%= club.name.parameterize.underscore %>">
            <% if club.logo.nil? || club.logo == "" %>
              <%= image_tag "https://www.logolynx.com/images/logolynx/cb/cb293ba8b9c20c84b4f279f6a3a76464.png", class:"club-logo" %>
            <% else %>
              <%= image_tag club.logo, class:"club-logo" %>
            <% end %>
            <span><%= club.name %></span>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>

<%= javascript_pack_tag 'shared/navbar' %>