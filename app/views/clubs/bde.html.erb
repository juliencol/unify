<div class="banner" style="background-image: url(https://res.cloudinary.com/isep/image/upload/v1577378158/unify/default_background_gzzcap.jpg);">
</div>

<div class="d-flex mt-3">
    <div class="ml-5 pr-5 pl-5">
        <%= image_tag @bde.logo, class:"club-logo" %>
        <p class="text-center"><%= @bde.name.upcase %></p>
        <ul>
            <li>Projet Pédagogique</li>
            <li>Evenements</li>
            <li>Membres</li>
            <li>Site web</li>
            <li>Instagram</li>
        </ul>
    </div>
    
    <div class="ml-5 mr-5 text-center pr-5 pl-5">
        <% if @bde.events.nil? || @bde.events == [] %>
            <p>Pas d'événements disponibles</p>
        <% else %>
            <% @bde.events.each do |event| %>
                <div class="row d-flex justify-content-center mb-5">
                    <div class="card mt-4" style="width: 50rem;">
                        <img class ="mt-4 ml-4" src="<%=@bde.logo%>" style="width: 5rem;" alt="...">
                        <div class="card-body">
                            <img src="<%= event.image%>" class="card-img-top" style="width:30%; margin-top: -5rem" alt="...">
                            <h5 class="card-title"><%= event.name %></h5>
                            <h6 class="card-subtitle mb-2 text-muted">Proposé par <%= @bde.name %></h6>
                            <p class="card-text"><%= event.short_description%></p>
                            <a href="#" class="btn btn-primary">S'inscrire</a>
                        </div>
                    </div>        
                </div>
            <% end %>
        <% end %>
    </div>
</div>
