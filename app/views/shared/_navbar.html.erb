<div class="navbar navbar-expand-sm navbar-light navbar-unify">
  <div>
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag "https://res.cloudinary.com/isep/image/upload/v1577087960/unify/unify-logo_qvbcvn.png" %>
    <% end %>
    <div id="search-bar" class="navbar-brand" >
        <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Rechercher une association ou un événement" %>
    </div>
    <%= link_to "Calendrier", "#", class: "navbar-brand" %>
    <%= link_to "Associations", "#", class: "navbar-brand" %>
    <%= link_to "BDE Genesis", "#", class: "navbar-brand" %>
  </div>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto mr-3 align-items-center">
      <% if user_signed_in? %>
        <li class="nav-item dropdown mr-3">
         <i class="fas fa-bell notifications-icon"></i>
        </li>
        <li class="nav-item dropdown mr-3">
          <%= image_tag current_user.profile_picture, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <h1><%= %></h1>
            <%= link_to "Mon profil", profile_path, class: "dropdown-item" %>
            <%= link_to "Mes associations", "#", class: "dropdown-item" %>
            <%= link_to "Mes événements", "#", class: "dropdown-item" %>
            <%= link_to "Se déconnecter", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
