<nav class="navbar fixed-top navbar-expand-lg navbar-light bg-white text-dark">
  <%= link_to root_path, class: "navbar-brand navbar-logo-unify" do %>
    <%= image_tag "https://res.cloudinary.com/isep/image/upload/v1577087960/unify/unify-logo_qvbcvn.png", size: "38" %>
  <% end %>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse align-items-center" id="navbarSupportedContent">
    <%= simple_form_for :search, url: root_path, method: "GET", html: { class: 'form-inline mr-auto my-2 my-lg-0 d-flex flex-row', id: 'search-form' } do |f| %>
      <i class="fas fa-search"></i>
      <%= f.input :name,
                  label: false,
                  class: "form-control form-control-sm mr-sm-2",
                  input_html: {value: ""},
                  placeholder: "Rechercher un événement" %>
    <% end %>
    <ul class="navbar-nav align-items-lg-center">
      <li class="nav-item <%= 'active' if current_page?(root_path) %>">
        <%= link_to "Events", root_path, class: "nav-link" %>
      </li>
      <li class="nav-item <%= 'active' if current_page?(calendar_path) %>">
        <%= link_to "Calendrier", calendar_path, class: "nav-link" %>
      </li>
      <li class="nav-item <%= 'active' if current_page?(clubs_path) %>">
        <%= link_to "Associations", clubs_path, class: "nav-link" %>
      </li>
      <li class="nav-item <%= 'active' if current_page?(club_bde_path(Club.where(name: "Genesis BDE"))) %>">
        <%= link_to "BDE", club_bde_path(Club.where(name: "Genesis BDE")), class: "nav-link" %>
      </li>
      <% if user_signed_in? %>
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <% if current_user.profile_picture.nil? || current_user.profile_picture == "" %>
              <%=image_tag "https://res.cloudinary.com/isep/image/upload/v1577132733/unify/download_wqralk.png", class: "avatar" %>
            <% else %>
               <img class="avatar" alt="Pas de photo de profil" src=<%= current_user.profile_picture %> >
            <% end %>
          </a>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Mon profil", user_path(current_user), class: "dropdown-item" %>
            <div class="dropdown-divider"></div>
            <%= link_to "Se déconnecter", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</nav>
